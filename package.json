{
	"name": "@zenyr/bun-pty",
	"version": "0.3.2",
	"description": "Cross-platform pseudoterminal (PTY) implementation for Bun with native performance (fork of bun-pty)",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zenyr/bun-pty.git"
	},
	"homepage": "https://github.com/zenyr/bun-pty#readme",
	"bugs": {
		"url": "https://github.com/zenyr/bun-pty/issues"
	},
	"author": {
		"name": "Jinhyeok Lee",
		"url": "https://github.com/zenyr"
	},
	"contributors": [
		{
			"name": "Dilip Thapa",
			"url": "https://github.com/sursaone"
		}
	],
	"license": "MIT",
	"keywords": [
		"bun",
		"pty",
		"terminal",
		"pseudoterminal",
		"shell",
		"tty",
		"ffi",
		"rust",
		"console",
		"cli",
		"node-pty",
		"cross-platform",
		"native",
		"performance"
	],
	"scripts": {
		"prepare": "bun run build",
		"postinstall": "bun run build",
		"prepack": "bun run build",
		"build:rust": "cd rust-pty && cargo build --release",
		"build:ts": "bun build ./src/index.ts --outdir ./dist --target bun --declaration --external bun:ffi && tsc --emitDeclarationOnly --declaration --outDir dist",
		"build": "bun run build:rust && bun run build:ts",
		"test": "bun test",
		"test:unit": "bun test src/terminal.test.ts",
		"test:integration": "RUN_INTEGRATION_TESTS=true bun test src/terminal.integration.test.ts",
		"test:all": "bun run test:unit && bun run test:integration",
		"clean": "rm -rf ./dist && cd rust-pty && cargo clean"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"files": [
		"src/**/*",
		"rust-pty/**/*",
		"!rust-pty/target/**/*",
		"dist/**/*",
		"build.ts",
		"build.sh",
		"README.md",
		"LICENSE",
		"CHANGELOG.md",
		"tsconfig.json"
	],
	"devDependencies": {
		"@types/bun": "^1.2.13",
		"@types/node": "^22.15.18",
		"typescript": "^5.8.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
